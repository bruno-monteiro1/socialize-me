{
    "compilerOptions": {
      "target": "es5",                          
      "module": "ESNext", 
      "moduleResolution": "node",                   
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": ".",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "ts-node": {
        "esm": true
    }
  }